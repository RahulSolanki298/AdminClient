        {
            <div class="row">
                <label id="lbl1_@i" name="lbl1_@i">@item.Price</label>
                <input type="text" name="lbl_@i" id="lbl_@i" dataSource="@item" value="@item.ClassId" readonly=true />
                <input type="text" name="Class1_@i" id="Class1_@i" placeholder="Order Quantity (e.g. 5)" value="@item.ClassId" enabled="false" />
