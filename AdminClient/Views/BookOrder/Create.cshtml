        <e-combobox-fields text="ClassMaster.ClassName" value="ClassMaster.ClassId"></e-combobox-fields>
        </ejs-combobox>*@

                <input type="text" name="OrderQty_@i" id=" OrderQty_@i" placeholder="Order Quantity (e.g. 5)" />
                <input type="text" name="ClassBookPrice_@i" id="ClassBookPrice_@i" placeholder="Class Book Price" dataSource="@item" value="@item.Price" readonly="true"></input >
                <input type="text" name="Total_@i" id="Total_@i" placeholder="Order Total (e.g. 5)" />



            </div>
            i++;
        }
        <input  id="GrandTotal" enabled="false" />



    }


    <input type="submit" title="Submit" />


</form>